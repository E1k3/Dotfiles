#!/bin/zsh
pixelation=20
blur=4

if [[ -n "$1" && "$1" != "-n" ]]; then
	echo -e "Usage: $0 [-n]\n\t-n\tStarts i3lock with --no-fork option"
	exit 1
fi

if ! pgrep i3lock > /dev/null; then
	scrot -om /tmp/screenlock.png

	ffmpeg -i /tmp/screenlock.png -y -v error -vf "scale=w=iw/${pixelation}:h=-1:flags=neighbor,scale=w=iw*${pixelation}:h=-1:flags=neighbor,boxblur=luma_radius=${blur}:chroma_radius=${blur}" /tmp/screen_blurred.png
	mv /tmp/screen_blurred.png /tmp/screenlock.png

	i3lock "$1" -i /tmp/screenlock.png
fi
