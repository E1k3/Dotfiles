# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = Eike Gebauer
	email = e.g@wwu.de
[core]
	excludesfile = ~/.gitignore_global
[merge]
	tool = vimdiff
	conflictstyle = diff3
[diff]
	tool = vimdiff

[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
	rebase = false
[init]
	defaultBranch = master
