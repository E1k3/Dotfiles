client.focused			$border_color		$bg_color			$text_color		$bar_color
client.unfocused		$bg_color_ia		$bg_color_ia		$text_color_ia	$bar_color
client.focused_inactive	$bg_color_ia		$bg_color_ia		$text_color_ia	$bar_color
client.urgent			$bg_color_urgent	$bg_color_urgent	$text_color		$bar_color

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar
{
        status_command "SCRIPT_DIR=$HOME/.config/i3blocks i3blocks -c $HOME/.config/i3/i3blocks.conf"

        colors
        {
                background $bg_color
                statusline $text_color
        }
		tray_output primary
        font pango: Droid Sans Mono, FontAwesome 10
}


